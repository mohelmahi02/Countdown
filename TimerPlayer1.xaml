<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:CountDown.ViewModel"
             x:Class="CountDown.TimerPlayer1"
             Title="Make a Word"
             BackgroundColor="Turquoise"
             x:DataType="viewmodel:TimerPlayer1ViewModel">

    <VerticalStackLayout BackgroundColor="Turquoise">
        <Label 
            Text="Think of a word within the Time Limit"
            HorizontalTextAlignment="Center"
            HeightRequest="100"
            TextColor="purple"
            FontSize="Large" />

        <Label 
            Text="{Binding RemainingTimeText}"
            HorizontalTextAlignment="Center"
            HeightRequest="120"
            TextColor="Red"
            FontAttributes="Bold"
            FontSize="Large" />

        <Label 
            Text="Alphabets are : "
            HorizontalTextAlignment="Start"
            Padding="20"
            HeightRequest="60"
            TextColor="black"
            FontSize="Medium" />

        <Label 
            Text="{Binding Words}"
            HorizontalTextAlignment="Center"
            Padding="20"
            HeightRequest="100"
            TextColor="DarkBlue"
            FontSize="50" />
        
    </VerticalStackLayout>
</ContentPage>
